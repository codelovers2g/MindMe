<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/callbackgettingstart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite">

    <com.mindmesolo.mindme.helper.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/companylogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:src="@drawable/checked"
        app:civ_border_color="@color/colorwhite"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/gettingstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/companylogo"
        android:text="Getting Started"
        android:textColor="@color/colorblack"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gettingstart"
        android:layout_toRightOf="@+id/companylogo"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="3">
        <!--suppress AndroidDomInspection -->
        <ProgressBar
            android:id="@+id/progressStatus"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="4dp"
            android:layout_weight="2"
            android:background="@color/colorbackground"
            android:progress="0"
            android:progressDrawable="@drawable/style_progress_bar_open" />

        <TextView
            android:id="@+id/progressbarStatus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0%"
            android:textAlignment="center"
            android:textColor="@color/colororange" />
    </LinearLayout>

</RelativeLayout>
