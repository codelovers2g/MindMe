<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Button Type" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/link"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:checked="true"
                    android:text="Link"
                    android:textAllCaps="false"
                    android:textColor="@drawable/toggle_text_color_green"
                    android:textOff="Link"
                    android:textOn="Link" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorgrey" />

                <ToggleButton
                    android:id="@+id/call"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textColor="@drawable/toggle_text_color_green"
                    android:textOff="Call"
                    android:textOn="Call" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorgrey" />

                <ToggleButton
                    android:id="@+id/email"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:text="email"
                    android:textAllCaps="false"
                    android:textColor="@drawable/toggle_text_color_green"
                    android:textOff="Email"
                    android:textOn="Email" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorgrey" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnTitle"
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Title" />

            <EditText
                android:id="@+id/EditTextTitle"
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape"
                android:gravity="end"
                android:hint="Click Here" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorgrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnaction"
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Action" />

            <EditText
                android:id="@+id/EditTextAction"
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:hint="Add url" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorgrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button Corners"
                android:textColor="@color/colorblack"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonCornerSeekbarLink"
                android:layout_marginTop="15dp"
                android:text="Square"
                android:textColor="@color/colorblack" />

            <SeekBar
                android:id="@+id/buttonCornerSeekbarLink"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:max="20"
                android:progress="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/buttonCornerSeekbarLink"
                android:layout_marginTop="15dp"
                android:text="Round"
                android:textColor="@color/colorblack" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorgrey"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Button Size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonSizeSeekbarLink"
                android:layout_marginTop="15dp"
                android:text="Small"

                android:textColor="@color/colorblack" />

            <SeekBar
                android:id="@+id/buttonSizeSeekbarLink"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:max="500"
                android:progress="250"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/buttonSizeSeekbarLink"
                android:layout_marginTop="15dp"
                android:text="Large"
                android:textColor="@color/colorblack" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorgrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/All_CTA_EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Alignment" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/leftLink"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/alignleft"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/centerLink"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/aligncenter"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/rightLink"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/alignright"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorgrey"
            android:visibility="visible" />
    </LinearLayout>


</ScrollView>