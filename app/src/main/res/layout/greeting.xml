<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/login_margin"
            android:layout_marginRight="@dimen/login_margin"
            android:layout_marginTop="@dimen/login_layout_margin"
            android:padding="5dp"
            android:text="XX-XX-XX"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/activityHeaderText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/login_layout_margin"
            android:padding="10dp"
            android:text="MindMe Phone Number"
            android:textColor="@android:color/black"

            android:textSize="@dimen/simple_text_big" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorgrey"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Greeting"
                android:textColor="@android:color/black"
                android:textSize="@dimen/simple_text_big" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/greeting_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:textSize="20dp" />
        </RelativeLayout>

        <com.mindmesolo.mindme.helper.Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewborder"
            android:gravity="center"
            android:padding="5dp" />

        <Button
            android:id="@+id/recordBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/phone_greeting_btn_shape"
            android:padding="5dp"
            android:text="Record"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textOff="Record"
            android:textOn="Record"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/stopbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/phone_greeting_btn_shape"
            android:padding="5dp"
            android:text="Stop"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textOff="Stop"
            android:textOn="Stop"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/play_and_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_layout_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">


            <Button
                android:id="@+id/audio_play"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/greating_toggle_btn"
                android:padding="5dp"
                android:text="Play"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textOff="Play"
                android:textOn="Play" />

            <Button
                android:id="@+id/audio_stop"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/greating_toggle_btn"
                android:padding="5dp"
                android:text="Stop"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textOff="Stop"
                android:textOn="Stop"
                android:visibility="gone" />

            <Button
                android:id="@+id/audio_replace"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/greating_toggle_btn"
                android:padding="5dp"
                android:text="Replace"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textOff="Replace"
                android:textOn="Replace" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorgrey"></View>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorgrey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:text="Your greeting will play when someone calls your MindMe phone number. Since voicemail is not offered at present, we highly recommend fowarding calls."
                android:textAlignment="center"
                android:textSize="@dimen/heading_three" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>