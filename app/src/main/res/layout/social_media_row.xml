<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:id="@+id/socialMediaImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/socialMediaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/socialMediaImage"
            android:background="@android:color/transparent"
            android:hint="item Title"
            android:padding="5dp" />

        <LinearLayout
            android:id="@+id/url_and_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/socialMediaName"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/socialMediaImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/socialMediaUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:hint="UserId" />

            <EditText
                android:id="@+id/socialMediaId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Your social id"
                android:textColorHint="@color/colorgrey"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/leftarrow" />
    </RelativeLayout>
</LinearLayout>