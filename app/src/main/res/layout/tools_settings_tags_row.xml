<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/m_pages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:layout_toLeftOf="@+id/m_pages_count"
        android:singleLine="true"
        android:text="text"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_view_Text_Size" />

    <TextView
        android:id="@+id/m_pages_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/m_pages_image"
        android:layout_toStartOf="@+id/m_pages_image"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="0"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_view_Text_Size" />

    <ImageView
        android:id="@+id/m_pages_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end|center_horizontal"
        android:focusable="true"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/three" />
</RelativeLayout>