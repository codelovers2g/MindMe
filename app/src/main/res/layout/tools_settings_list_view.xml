<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listview_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/list_view_image_height"
        android:layout_height="@dimen/list_view_image_width"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/leftarrow"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/listview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="start"
        android:layout_toEndOf="@+id/listview_image"
        android:layout_toRightOf="@+id/listview_image"
        android:padding="10dp"
        android:text="data"
        android:textAlignment="textStart"
        android:textSize="@dimen/list_view_Text_Size" />
</RelativeLayout>