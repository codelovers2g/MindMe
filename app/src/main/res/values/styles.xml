<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorwhite</item>
        <item name="editTextStyle">@style/simpleEditText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/colorwhite</item>
        <item name="android:actionMenuTextColor">@color/colorwhite</item>
        <item name="editTextStyle">@style/simpleEditText</item>
    </style>

    <style name="AppTheme.NoActionBar.NoTitleBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="actionMenuTextColor">@color/colorwhite</item>
        <item name="android:actionMenuTextColor">@color/colorwhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/colorwhite</item>
    </style>

    <style name="ThemeName" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/colorwhite</item>
        <item name="android:actionMenuTextColor">@color/colorwhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    // action menu text icons style //

    <style name="MyMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    // action buttons icons size //

    //NOTE Don't Remove.

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">40dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <bool name="abc_config_actionMenuItemAllCaps">false</bool>

    //------------all check box in app--------//

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colormenucolor</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_star</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    //--------profile page popup menu------------//

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    //--------Theme for all Tabs in app------------//

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //----------for Toggle Button Color--------------//

    <style name="ThemeFullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="All_CTA_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textColorHint">@color/colorBasicGray</item>
        <item name="android:textSize">@dimen/simple_text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="simpleEditText" parent="@android:style/Widget.EditText">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditTextStyleEditContact" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="All_CTA_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textColorHint">@color/colorBasicGray</item>
        <item name="android:textSize">@dimen/simple_text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="EditTextField" parent="@android:style/Widget.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>
